<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anunciosloc">

    <!-- ========================================================= -->
    <!--                 PERMISSÕES NECESSÁRIAS                    -->
    <!-- ========================================================= -->

    <!-- Localização GPS e de rede -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Acesso à Internet (para Google Maps e futuras conexões com servidor) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- ========================================================= -->
    <!--                       APLICAÇÃO                           -->
    <!-- ========================================================= -->

    <application
        android:allowBackup="true"

        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- Chave de API do Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCK66cF5LcCTBdkvi89o9EJb5xYtuYQSOE" />

        <!-- ========================================================= -->
        <!--                     ACTIVITIES                            -->
        <!-- ========================================================= -->

        <!-- Login: Tela inicial -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Mapa principal -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />

        <!-- Gestão de Locais -->
        <activity
            android:name=".activities.LocationManagementActivity"
            android:exported="false" />

        <!-- Gestão de Anúncios -->
        <activity
            android:name=".activities.AdManagementActivity"
            android:exported="false" />

        <!-- Perfil do Utilizador -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false" />

        <!-- Criação de Local -->
        <activity
            android:name=".activities.CreateLocationActivity"
            android:exported="false" />

        <!-- Publicação de Anúncio -->
        <activity
            android:name=".activities.PublishAdActivity"
            android:exported="false" />

        <!-- Visualização de Anúncio -->
        <activity
            android:name=".activities.ViewAdActivity"
            android:exported="false" />

    </application>
</manifest>
